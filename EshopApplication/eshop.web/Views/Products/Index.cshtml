@model List<eshop.web.Models.Domain.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Products" asp-action="Create">Add new Product</a>
    </div>
    @for(int i=0;i<Model.Count;i++){
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
        }

<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">@item.productname</h5>
    <p class="card-text">@item.productdescription</p>
    <div class="card-footer">
        <a asp-controller="Products" asp-action="AddProductToCard" class="btn btn-info">Add to Card</a>
         <a asp-controller="Products" asp-action="Edit" asp-route="@item.id" class="btn btn-secondary">Edit</a>
        </div>
    
  </div>
</div>

        if (i % 3 == 2)
        {
            @:</div>
        }
    }
</div>